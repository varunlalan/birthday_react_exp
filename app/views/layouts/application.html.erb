<!DOCTYPE html>
<html>
<head>
  <title>ReactExp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="top-bar foundation-bar" data-topbar role="navigation">
    <ul class='title-area'>
      <li>Birthday App</li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%= content_tag(:li, fa_icon("plus-square"), {id: "trigger-overlay"}) %>
      </ul>
    </section>
  </nav>

  <div id="main-content">
    <section role="main" class='scroll-container'>
      <%= yield %>
    </section>
  </div>

</body>
</html>
